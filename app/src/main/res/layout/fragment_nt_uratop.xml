<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                tools:context="alonedroid.com.nanitabe.scene.uratop.NtUraTopFragment_"
    >

    <FrameLayout
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/trend_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/dimen_space_16dp"
        android:text="@string/trend_word"
        android:textColor="@color/black"
        />

    <alonedroid.com.nanitabe.view.NtCardView_
        android:id="@+id/trend_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/center"
        android:layout_below="@id/trend_main"
        />

    <EditText
        android:id="@+id/uratop_search_text"
        style="@style/Widget.Nanitabe.Edit.Text"
        android:layout_width="200dp"
        android:layout_height="@dimen/default_view_height"
        android:layout_below="@id/center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_space_16dp"
        android:background="@drawable/custom_frame"
        android:gravity="center"
        android:hint="@string/search"
        android:inputType="text"
        />

    <ImageView
        android:id="@+id/uratop_search"
        android:layout_width="@dimen/default_view_height"
        android:layout_height="@dimen/default_view_height"
        android:layout_below="@id/center"
        android:layout_marginTop="@dimen/dimen_space_16dp"
        android:layout_toRightOf="@id/uratop_search_text"
        android:background="@drawable/search"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/trend_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uratop_search"
        android:padding="@dimen/dimen_space_16dp"
        android:text="@string/recomm_word"
        android:textColor="@color/black"
        />

    <alonedroid.com.nanitabe.view.NtHistoryItemView_
        android:id="@+id/trend_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trend_sub"
        />

    <alonedroid.com.nanitabe.view.NtHistoryItemView_
        android:id="@+id/trend_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trend_2"
        android:paddingTop="@dimen/dimen_space_8dp"
        />

    <alonedroid.com.nanitabe.view.NtHistoryItemView_
        android:id="@+id/trend_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trend_3"
        android:paddingTop="@dimen/dimen_space_8dp"
        />
</RelativeLayout>