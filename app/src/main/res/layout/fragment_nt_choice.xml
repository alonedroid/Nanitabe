<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="alonedroid.com.nanitabe.scene.select.NtChoiceFragment_"
    >

    <FrameLayout
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/nt_choice_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_view_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        android:src="@drawable/title_bar"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/nt_recipe_pager"
        android:layout_width="300dp"
        android:layout_height="295dp"
        android:layout_below="@id/nt_choice_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|center"
        android:layout_marginTop="10dp"
        />

    <alonedroid.com.nanitabe.view.NtIndicatorView_
        android:id="@+id/nt_choice_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nt_recipe_pager"
        android:layout_marginBottom="@dimen/dimen_space_8dp"
        android:layout_marginLeft="@dimen/dimen_space_24dp"
        android:layout_marginRight="@dimen/dimen_space_24dp"
        android:layout_marginTop="@dimen/dimen_space_8dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/nt_choice_indicator"
        android:layout_gravity="top|left"
        android:layout_marginTop="10dp"
        android:background="#A5000000"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/prev_menu"
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:layout_gravity="center|left"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_back"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center|center"
            android:layout_weight="1"
            android:gravity="center|center"
            android:text="@string/loading"
            android:textColor="#fff"
            />

        <ImageView
            android:id="@+id/next_menu"
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:layout_gravity="center|right"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_next"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/decide_menu"
        style="@style/BrownButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_view_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2.5dp"
        android:layout_toLeftOf="@id/center"
        android:text="これ食べたい"
        />

    <TextView
        android:id="@+id/share_menu"
        style="@style/BrownButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_view_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/center"
        android:text="候補を送る"
        />
</RelativeLayout>